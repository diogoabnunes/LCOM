#include "mouse.h"

static int hook_id_mouse;

int mouse_subscribe_int()
{
  hook_id_mouse = MOUSE_IRQ;

  if (sys_irqsetpolicy(MOUSE_IRQ, IRQ_REENABLE | IRQ_EXCLUSIVE, &hook_id_mouse) != 0)
  {
    printf("Failed to subscribe the KBC interrupts.\n");
    return -1;
  }

  return MOUSE_IRQ;
}

int mouse_unsubscribe_int()
{
  if (sys_irqrmpolicy(&hook_id_mouse) != 0)
  {
    printf("Failed to unsubscribe the interrupt of the associated hook.\n");
    return 1;
  }
  return 0;
}

